<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="App.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:width">64dp</item>
        <item name="android:height">32dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.Full</item>
        <item name="color">?attr/colorPrimaryContainer</item>
    </style>

    <style name="Ravvisant.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="materialThemeOverlay">?attr/colorOnPrimary</item>
        <item name="titleTextColor">?attr/colorOnSurface</item>
        <item name="android:background">@drawable/bg_top_bar</item>
        <item name="navigationIconTint">?attr/colorOnSurface</item>
        <item name="contentInsetStartWithNavigation">16dp</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="ThemeOverlay.Ravvisant.Toolbar" parent="">
        <item name="colorControlNormal">?attr/colorOnPrimary</item>
        <item name="colorSurface">?attr/colorPrimary</item>
        <item name="colorOnSurface">?attr/colorOnPrimary</item>
    </style>
    <!--Boton Google -->
    <style name="Widget.Ravvisant.Button.Google" parent="Widget.Material3.Button.OutlinedButton">
        <item name="backgroundTint">?attr/colorSurface</item>
        <item name="strokeColor">?attr/colorOutline</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="cornerRadius">10dp</item>
        <item name="iconTint">@null</item>
        <item name="iconGravity">start</item>
        <item name="iconPadding">8dp</item>
        <item name="iconSize">24dp</item>
        <item name="android:elevation">1dp</item>
        <item name="rippleColor">?attr/colorPrimaryContainer</item>
    </style>

    <!--    Card Categorie home-->
    <style name="ShapeAppearanceOverlay.App.CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!--    Circular Profile Image -->
    <style name="CircularImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorSurface"
        android:padding="10dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- ProgressBar para mostrar estado de carga -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cvPayToProduct"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                app:cardCornerRadius="10dp"
                android:backgroundTint="@color/ravvisant_dark_onSecondary"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/tvResumenPedido"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="20dp"
                        android:text="@string/resumen_pay"
                        android:textColor="@color/ravvisant_dark_onSecondaryContainer"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvProductos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Productos(9)"
                        android:textColor="@color/ravvisant_dark_onSecondaryContainer"
                        android:textSize="14dp"
                        android:textStyle="normal"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvResumenPedido" />

                    <TextView
                        android:id="@+id/tvEnvio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="@string/send_product"
                        android:textColor="@color/ravvisant_dark_onSecondaryContainer"
                        android:textSize="14dp"
                        android:textStyle="normal"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvProductos" />

                    <View
                        android:id="@+id/divider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:background="@android:color/darker_gray"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvEnvio" />

                    <TextView
                        android:id="@+id/tvTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/total"
                        android:textColor="@color/ravvisant_dark_onSecondaryContainer"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/divider" />

                    <TextView
                        android:id="@+id/tvPayProducts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="$9219.91"
                        android:textColor="@color/ravvisant_dark_onSecondaryContainer"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvResumenPedido" />

                    <TextView
                        android:id="@+id/tvPayEnvio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Gratis"
                        android:textColor="@color/ravvisant_free"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvPayProducts" />

                    <TextView
                        android:id="@+id/tvTotalPay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="$9219.91"
                        android:textColor="@color/ravvisant_dark_primary"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/divider" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tvSelectPayMethod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/ravvisant_dark_primary"
                android:textStyle="bold"
                android:text="@string/select_method_pay"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cvPayToProduct"
                />

            <androidx.cardview.widget.CardView
                android:id="@+id/cvPayPal"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                app:cardCornerRadius="10dp"
                android:backgroundTint="@color/ravvisant_dark_onSecondary"
                app:layout_constraintTop_toBottomOf="@+id/tvSelectPayMethod"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="10dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ivPayPal"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/ic_paypal"
                        android:background="@drawable/bg_circle_blue"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="40dp" />
                    <TextView
                        android:id="@+id/tvPayPal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/paypal"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:textColor="@color/ravvisant_dark_onPrimaryContainer"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="100dp"
                        />
                    <TextView
                        android:id="@+id/tvPayPalD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/description_paypal"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        app:layout_constraintTop_toBottomOf="@+id/tvPayPal"
                        android:textColor="@color/ravvisant_dark_onPrimaryContainer"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginLeft="100dp"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvCard"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                app:cardCornerRadius="10dp"
                android:backgroundTint="@color/ravvisant_dark_onSecondary"
                app:layout_constraintTop_toBottomOf="@+id/cvPayPal"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="10dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ivcard"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/ic_card_credit"
                        android:background="@drawable/bg_circle_green"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="40dp" />
                    <TextView
                        android:id="@+id/tvcard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/card_debit_or_credit"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:textColor="@color/ravvisant_dark_onPrimaryContainer"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="100dp"
                        />
                    <TextView
                        android:id="@+id/tvCardD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/description_card"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        app:layout_constraintTop_toBottomOf="@+id/tvcard"
                        android:textColor="@color/ravvisant_dark_onPrimaryContainer"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginLeft="100dp"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvYape"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                app:cardCornerRadius="10dp"
                android:backgroundTint="@color/ravvisant_dark_onSecondary"
                app:layout_constraintTop_toBottomOf="@+id/cvCard"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="10dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ivYape"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/ic_yape"
                        android:background="@drawable/bg_circle_purple"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="40dp" />
                    <TextView
                        android:id="@+id/tvYape"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/yape"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:textColor="@color/ravvisant_dark_onPrimaryContainer"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="100dp"
                        />
                    <TextView
                        android:id="@+id/tvYapeD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/description_yape"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        app:layout_constraintTop_toBottomOf="@+id/tvYape"
                        android:textColor="@color/ravvisant_dark_onPrimaryContainer"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginLeft="100dp"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvPLin"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                app:cardCornerRadius="10dp"
                android:backgroundTint="@color/ravvisant_dark_onSecondary"
                app:layout_constraintTop_toBottomOf="@+id/cvYape"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="10dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ivPlin"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="40dp"
                        android:background="@drawable/bg_circle_profile"
                        android:src="@drawable/ic_money"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvPLin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="100dp"
                        android:layout_marginTop="30dp"
                        android:text="@string/plin"
                        android:textColor="@color/ravvisant_dark_onPrimaryContainer"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvPLinD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="100dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/description_plin"
                        android:textColor="@color/ravvisant_dark_onPrimaryContainer"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvPLin" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</layout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <ImageView
            android:id="@+id/ivYapeLogo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_yape"
            android:background="@drawable/bg_circle_purple"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pagar con Yape"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/ravvisant_dark_primary"
            app:layout_constraintTop_toBottomOf="@id/ivYapeLogo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="15dp" />

        <TextView
            android:id="@+id/tvAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S/ 50.00"
            android:textSize="24dp"
            android:textStyle="bold"
            android:textColor="@color/ravvisant_dark_primary"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/tvInstructions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Escanea el código QR con tu app Yape"
            android:textSize="14dp"
            android:textColor="@color/ravvisant_dark_onPrimaryContainer"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/tvAmount"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="15dp" />

        <ImageView
            android:id="@+id/ivQRCode"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/bg_circle_blue"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@id/tvInstructions"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp" />

        <EditText
            android:id="@+id/etCodigoAprobacion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Código de aprobación"
            android:inputType="text"
            android:padding="12dp"
            android:background="@drawable/bg_circle_blue"
            android:textColor="@color/ravvisant_dark_primary"
            android:textColorHint="@color/ravvisant_dark_onPrimaryContainer"
            app:layout_constraintTop_toBottomOf="@id/ivQRCode"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp" />

        <Button
            android:id="@+id/btnConfirmarPago"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirmar pago"
            android:textColor="@android:color/white"
            android:background="@drawable/shape_buttom"
            app:layout_constraintTop_toBottomOf="@id/etCodigoAprobacion"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            android:textColor="@color/ravvisant_dark_onPrimaryContainer"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toBottomOf="@id/btnConfirmarPago"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView> 
<resources>
    <style name="Base.Theme.Ravvisant" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Colores primarios -->
        <item name="colorPrimary">@color/ravvisant_dark_primary</item>
        <item name="colorOnPrimary">@color/ravvisant_dark_onPrimary</item>
        <item name="colorPrimaryContainer">@color/ravvisant_dark_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/ravvisant_dark_onPrimaryContainer</item>

        <!-- Colores secundarios -->
        <item name="colorSecondary">@color/ravvisant_dark_secondary</item>
        <item name="colorOnSecondary">@color/ravvisant_dark_onSecondary</item>
        <item name="colorSecondaryContainer">@color/ravvisant_dark_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/ravvisant_dark_onSecondaryContainer</item>

        <!-- Colores de superficie -->
        <item name="android:colorBackground">@color/ravvisant_dark_surface</item>
        <item name="colorOnBackground">@color/ravvisant_dark_onSurface</item>
        <item name="colorSurface">@color/ravvisant_dark_surface</item>
        <item name="colorOnSurface">@color/ravvisant_dark_onSurface</item>
        <item name="colorSurfaceVariant">@color/ravvisant_dark_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/ravvisant_dark_onSurfaceVariant</item>
        <item name="colorOutline">@color/ravvisant_dark_outline</item>

        <!-- Barra de estado -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Base.Theme.JRavvisant" parent="Base.Theme.Ravvisant" />
</resources>